doctype html
html
	head
		title Admin Area â€“ TheFlamingShark Links
		include includes/materialize_head.pug
	body
		include includes/header.pug
		main.container
			h1 Admin
			h2 Uploaders
			ul.collection
				each uploader in uploaders
					li.collection-item.avatar
						img.circle(src=uploader.info.avatar, alt="")
						span.title #{uploader.info.tag}
						p #{uploader.userId}
						button.btn.secondary-content.waves-effect.delete-uploader(data-id=uploader.userId) Delete
			h2 Add New Uploader
			div.row
				div.input-field.col.s4
					input#new-uploader(type="text")
					label(for="new-uploader") Discord ID
				button.btn#add-uploader Add
			h2 Data Import/Export
			div.row
				a.btn.col.s12#export(href="/api/export/links") Export Links
			div.row
				button.btn.col.s4#import Import Links
				input.col.s4#data-file(type="file", accept=".json")
				div.col.s4
					div.switch
						label
							input#clear(type="checkbox", disabled)
							span.lever
							| Clear existing shows, videos, and links
					div.switch
						label
							input#reset(type="checkbox", disabled)
							span.lever
							| Reset link IDs
		include includes/footer.pug
		script(src="/assets/js/admin.js")
